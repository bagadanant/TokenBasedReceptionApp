@using TokenBasedReceptionApp.Helpers.Constant;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TokenBasedReception</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/plugin-css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TBR", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(@ViewBag.ActiveNav == NavigationTab.Dashboard ? "active" : "")">
                        @Html.ActionLink("Dashboard", "Index", "Dashboard")
                    </li>
                    <li class="@(@ViewBag.ActiveNav ==  NavigationTab.Disease ? "active" : "")">
                        @Html.ActionLink("Disease", "Index", "Disease")
                    </li>
                    <li class="@(@ViewBag.ActiveNav == NavigationTab.Patient ? "active" : "")">
                        @Html.ActionLink("Patient", "Index", "Patient")
                    </li>
                    <li class="@(@ViewBag.ActiveNav == NavigationTab.Reception ? "active" : "")">
                        @Html.ActionLink("Reception", "Index", "Reception")
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Token Based Reception Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugins")
   
    @RenderSection("scripts", required: false)
</body>
</html>
