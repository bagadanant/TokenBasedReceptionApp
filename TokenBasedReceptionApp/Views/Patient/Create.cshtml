@model TokenBasedReception.ViewModel.PatientViewModel

@using TokenBasedReceptionApp.Helpers.Constant;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveNav = NavigationTab.Patient;
}

<h2>Patient</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
