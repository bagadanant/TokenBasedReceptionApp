@model TokenBasedReception.ViewModel.SearchPatientViewModel

@using (Ajax.BeginForm("Search", "Patient",
                                                        new AjaxOptions
                                                        {
                                                            OnSuccess = "onSearchPatientSuccess",
                                                            OnFailure = "onSearchPatientFailure"
                                                        },
                                                        new { @class = "form-inline" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Keyword, htmlAttributes: new { @class = "sr-only" })
        @Html.EditorFor(model => model.Keyword, new { htmlAttributes = new { @class = "form-control", placeholder="Phone Number/First Name/Last Name" } })
        @Html.ValidationMessageFor(model => model.Keyword, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
}